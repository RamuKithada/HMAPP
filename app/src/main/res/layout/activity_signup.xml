<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@mipmap/bg"/>
    <RelativeLayout
        android:id="@+id/layout_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/logo_icon"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_above="@+id/tv_socialloginstitle"
        android:layout_below="@+id/layout_logo"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/textfields_background">
            <EditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="25"
                android:background="@android:color/transparent"
                android:hint="Name"
                android:inputType="textPersonName"
                android:layout_margin="10dp"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/textfields_background">
            <EditText
                android:id="@+id/et_mobilenumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="13"
                android:background="@android:color/transparent"
                android:hint="Mobile Number"
                android:inputType="number"
                android:layout_margin="10dp"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/textfields_background">
            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="12"
                android:background="@android:color/transparent"
                android:hint="Password"
                android:inputType="textPassword"
                android:layout_margin="10dp"
                />
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/layout_user_type"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:weightSum="2"
            >


            <RelativeLayout
                android:id="@+id/layout_user"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/white_border"
                android:padding="2dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/user"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="@string/user"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/layout_marchent"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/white_border"
                android:padding="2dp"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/merchant"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:background="@android:color/transparent"
                    android:text="@string/merchant"
                    android:textSize="18sp"
                    android:textColor="@android:color/white"
                    />
            </RelativeLayout>

        </LinearLayout>


        <RelativeLayout
            android:id="@+id/layout_signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@color/colorOrangebutton">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_margin="10dp"
                android:textColor="@android:color/white"
                android:text="SIGNUP"
                android:layout_centerHorizontal="true"
                />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_alreadyhave_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_margin="10dp"
            android:padding="5dp"
            android:textColor="@android:color/white"
            android:text="ALREADY HAVE AN ACCOUNT?"
            android:layout_centerHorizontal="true"
            />
    </LinearLayout>

</RelativeLayout>